@model IEnumerable<ReservationRestaurantAdmin.Models.ScheduleTable>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Quản lý Schedule Table</span>
        </nav>
    </div>
</div>

<div class="table-responsive">
    <h1>
        Quản lý Schedule Table
    </h1>
    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Table ID & Table Name</th> 
                <th scope="col">Date</th>
                <th scope="col">Start Time</th>
                <th scope="col">End Time</th>
                <th scope="col">#</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td> @item.Table.Id & @item.Table.Name</td>
                        <td>@item.Date.Value.ToString("dd/MM/yyyy")</td>
                        <td>@item.StartTime.Value.ToString("hh:mm:ss tt")</td>
                        <td>@item.EndTime.Value.ToString("hh:mm:ss tt")</td>
                        <td>
                            <a class="btn btn-primary m-r-5" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-info  m-r-5" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a class="btn btn-danger  m-r-5" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

